{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "hidden": true
    },
    {
      "name": "release",
      "hidden": true,
      "inherits": "default",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "release-posix",
      "inherits": "release",
      "displayName": "Release",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows",
      "inherits": "release",
      "displayName": "Release",
      "toolchainFile": "WindowsToolchain/Windows.MSVC.toolchain.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release-posix",
      "displayName": "Release",
      "configurePreset": "release-posix",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-windows",
      "displayName": "Release",
      "configurePreset": "release-windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "testPresets": [
    {
      "name": "test-posix",
      "displayName": "Test All",
      "configurePreset": "release-posix"
    },
    {
      "name": "test-windows",
      "displayName": "Test All",
      "configurePreset": "release-windows"
    }
  ]
}
